<UserControl x:Class="TaskManager.CustomControl.PV_SP_LiveChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{DynamicResource TextFillColorSecondaryBrush}" BorderThickness="0.2">
        <Viewbox Stretch="Fill">

            <Canvas
                    Height="100"
                    Width="128"
                    >
                <Line StrokeThickness="0.2" Stroke="{DynamicResource TextFillColorSecondaryBrush}"
                    x:Name="yLine" X1="0" Y1="50" X2="128" Y2="50"></Line>



                <Polyline
                    StrokeThickness="0.2"
                            Stroke="{StaticResource PaletteBlueBrush}" x:Name="line"
                           ></Polyline>

                <Polyline
                    StrokeThickness="0.2"
                            Stroke="{StaticResource PaletteRedBrush}" x:Name="line2"
                           ></Polyline>
            </Canvas>

        </Viewbox>
    </Border>
</UserControl>
